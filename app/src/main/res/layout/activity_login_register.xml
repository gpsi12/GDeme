<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:OwnEditText="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_login_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:background="#20DC2A2A"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            android:text="提示：您将要注册的手机号，请确认乐简系统用户已经将您添加为家庭成员。"
            android:textColor="#E27475"
            android:textSize="26px" />
    </LinearLayout>

    <com.gpsi.gdeme.widget.WithDelEditText
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:hint="用户名/手机号"
        android:textColor="#afa7a7"
        android:background="@drawable/bg_rounded_edittext"
        android:gravity="center_vertical"
        android:paddingLeft="22px"
        android:layout_marginTop="32px"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="32px">

        <com.gpsi.gdeme.widget.OwnEditText
            android:layout_width="354px"
            android:layout_height="92px"
            android:layout_weight="1"
            OwnEditText:mhint="55555555">

        </com.gpsi.gdeme.widget.OwnEditText>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="92px"
            android:text="点击获取验证码"
            android:textColor="#423F3F"
            android:textSize="32px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即认为同意"
            android:textColor="#423F3F"
            android:textSize="26px" />

        <TextView
            android:id="@+id/register_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册协议"
            android:textColor="#423F3F"
            android:textSize="26px"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register_send"
        android:layout_width="654px"
        android:layout_height="92px"
        android:layout_marginTop="62px"
        android:background="#DC2A2A"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="36px" />

</LinearLayout>